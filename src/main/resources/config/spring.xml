    <!--EXECUTOR-->
    <bean id="main-worker" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor"
          primary="true"
          p:corePoolSize="5"
          p:maxPoolSize="20"
          p:daemon="false"
          p:threadNamePrefix="WORKER">
    </bean>

    <bean id="main-scheduler" class="org.springframework.scheduling.concurrent.ThreadPoolTaskScheduler"
          primary="true"
          p:threadNamePrefix="SCHEDULER"
          p:poolSize="20"/>

